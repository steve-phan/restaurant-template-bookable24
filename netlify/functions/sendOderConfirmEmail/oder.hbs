<div
  style="
    margin-top: 0;
    padding-top: 0;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 16px;
    color: #212228;
    text-align: left;
  "
>
  <table
    width="100%"
    border="0"
    cellpadding="10"
    style="background-color: #e3e3e3"
  >
    <tbody>
      <tr>
        <td valign="middle">
          <table
            border="0"
            cellpadding="0"
            align="center"
            style="background-color: #ffffff;
            width: 600px;
              max-width: 100%;"
          >
            <tbody>
                       <tr>
                <td
                  align="left"
                  style="
                    padding-bottom: 17px;
                    color: #292929;
                    line-height: 24px;
                    line-height: 1.5em !important;
                  "
                >
                  Hi {{fullName}}
                </td>
              </tr>

              <tr>
                <td
                  align="left"
                  style="line-height: 24px; line-height: 1.5em !important"
                >
                  vielen Dank für Deine Bestellung beim MaiSonTom®
                  Lieferservice!<br />

                  <br />
                  Deine Bestellung:
                </td>
              </tr>
              <tr>
                <td
                  align="left"
                  style="padding-top: 35px; color: #292929; font-weight: bold"
                >
                  LIEFERANSCHRIFT
                </td>
              </tr>
              <tr>
                <td
                  align="left"
                  style="
                    padding-top: 6px;
                    line-height: 24px;
                    line-height: 1.5em !important;
                  "
                >
                  {{fullName}} {{phone}}<br />
                  <br />
                  {{street}} {{houseNumber}} <br />
                  {{postCode}} {{city}} <br />
                  <br />
                </td>
              </tr>
              <tr>
                <td
                  align="left"
                  style="padding-top: 30px; color: #292929; font-weight: bold"
                >
                  BESTELLDETAILS
                  <span style="font-weight: normal; white-space: nowrap">
                  </span>
                </td>
              </tr>
              <tr>
                <td align="left" style="padding-top: 20px">
                  {{#each cartItems}}
                  <table
                    width="100%"
                    cellpadding="2"
                    cellspacing="0"
                    style="
                      font-family: Arial, Helvetica, sans-serif;
                      font-size: 16px;
                      color: #666666;
                      line-height: normal;
                      line-height: normal !important;
                    "
                  >
                    <tbody>
                      <tr>
                        <td
                          align="left"
                          style="
                            padding-top: 10px;
                            padding-right: 20px;
                            color: #292929;
                            font-weight: bold;
                          "
                        ></td>
                      </tr>
                      <tr>
                        <td
                          colspan="3"
                          style="
                            font-size: 14px;
                            padding: 14px;
                            padding-right: 5px;
                          "
                        >
                          <table
                            width="100%"
                            bgcolor=""
                            cellpadding="0"
                            cellspacing="0"
                            border="0"
                            style="line-height: 20px; text-transform: uppercase"
                          >
                            <tbody>
                              <tr>
                                <td width="30"><strong>1 X</strong></td>
                                <td>
                                  <strong style="color: #cc0000"
                                    >{{this.quantity}} x {{this.foodId}}
                                  </strong>
                                  {{this.foodName}}
                                </td>
                                <td width="60" align="right">
                                  <strong>{{this.payAmount}}€</strong>
                                </td>
                              </tr>

                              {{#if this.require}}
                              <tr style="font-style: italic">
                                Notes: {{this.require}}
                              </tr>
                              {{/if}}
                            </tbody>
                          </table>
                        </td>
                      </tr>
                    </tbody>
                  </table>

                  {{/each}}
                </td>
              </tr>
              <tr>
                <td
                  align="left"
                  style="padding-top: 30px; color: #292929; font-weight: bold"
                >
                  BESTELLDETAILS
                  <span style="font-weight: normal; white-space: nowrap">
                  </span>
                </td>
                <td width="60" align="right">
                  <strong>{{sumPrices}}€</strong>
                </td>
              </tr>
              <tr>
                <td align="left" style="padding-top: 30px; color: #292929">
                  Wir wünschen Dir einen guten Appetit und freuen uns schon auf
                  Deinen nächsten Besuch auf unserer Webseite
                  <span style="font-weight: normal; white-space: nowrap">
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
    </tbody>
  </table>
</div>
